<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:paddingLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="企业名称"
            android:textSize="14sp" />
        
         <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="年产量(t/a)"
            android:textSize="14sp" />
         
          <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="企业地址"
            android:textSize="14sp" />
           
         <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="企业网址"
            android:textSize="14sp" />
             
          <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="联系人"
            android:textSize="14sp" />
          
          <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="联系电话"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/companyname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="昆山氢化工贸易有限公司"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="8000"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"          
            android:text="江苏昆山经济技术开发区中央街10号"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"        
            android:text="www.qinghua.com"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"            
            android:text="马振邦"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="0512-57301234"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>